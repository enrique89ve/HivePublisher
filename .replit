modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["jq"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TypeScript Build and Example"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "hive_library_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HiveTS Library Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hive API Server"

[[workflows.workflow]]
name = "TypeScript Build and Example"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install typescript @types/node && npx tsc && node dist/examples/example.js"

[[workflows.workflow]]
name = "hive_library_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm init -y && npm install typescript @types/node && npx tsc && node dist/examples/example.js"

[[workflows.workflow]]
name = "HiveTS Library Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx tsc && node dist/examples/example.js"

[[workflows.workflow]]
name = "Hive API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx tsc && node dist/examples/api-server-runner.js"
waitForPort = 3000

[deployment]
run = ["sh", "-c", "npm install typescript @types/node && npx tsc && node dist/examples/example.js"]

[[ports]]
localPort = 3000
externalPort = 80
