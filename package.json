{
  "name": "hivets",
  "version": "1.0.0",
  "description": "A lightweight, enterprise-ready TypeScript library for Hive blockchain operations. Built with modern architecture for maximum reliability and developer experience.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "example": "examples",
    "lib": "dist"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rimraf dist dist-esm",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test",
    "examples": "npm run build && node examples/run-all.js",
    "docs": "typedoc src/index.ts --out docs",
    "validate": "npm run lint && npm run format:check && npm test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hive",
    "blockchain",
    "typescript",
    "crypto",
    "web3",
    "decentralized",
    "social",
    "content",
    "publishing",
    "voting",
    "steem"
  ],
  "author": "HiveTS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hivets/hivets.git"
  },
  "bugs": {
    "url": "https://github.com/hivets/hivets/issues"
  },
  "homepage": "https://github.com/hivets/hivets#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "hive-tx": "^6.1.3",
    "secp256k1": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.1",
    "@types/secp256k1": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "express": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  }
}
